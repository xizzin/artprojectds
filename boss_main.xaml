<Window x:Class="iamapollojusticeandiamfine.boss_main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iamapollojusticeandiamfine"
        mc:Ignorable="d"
        Loaded="DoAfterLoad"
        Title="boss_main" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.3*"/>
                    <RowDefinition Height="0.6*"/>
                    <RowDefinition Height="0.6*"/>
                    <RowDefinition Height="0.6*"/>
                    <RowDefinition Height="0.6*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TextBlock Name="boss_fullname_here" Grid.Column="0" Grid.Row="0"/>
                <Button Name="Exit_Button"  Grid.Column="0" Grid.Row="1" Content="Выход" Margin="20,15,20,15" Click="Exit_Button_Click"/>
            </Grid>
        </Grid>
        <DataGrid IsReadOnly="True" Name="ProjectInfO_datagrid" Grid.Column="1"/>
    </Grid>
</Window>
